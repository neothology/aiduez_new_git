{%- extends 'base.html.j2' -%}
{% from 'mathjax.html.j2' import mathjax %}
{% from 'jupyter_widgets.html.j2' import jupyter_widgets %}

{%- block header -%}
<!DOCTYPE html>
<html>
<head>
{%- block html_head -%}
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0">
{% set nb_title = nb.metadata.get('title', '') or resources['metadata']['name'] %}
<title>{{nb_title}}</title>

{%- block html_head_js -%}
{%- block html_head_js_requirejs -%}
<script src="{{ resources.require_js_url }}"></script>
{%- endblock html_head_js_requirejs -%}
{%- endblock html_head_js -%}

{% block jupyter_widgets %}
  {%- if "widgets" in nb.metadata -%}
    {{ jupyter_widgets(resources.jupyter_widgets_base_url, resources.html_manager_semver_range, resources.widget_renderer_url) }}
  {%- endif -%}
{% endblock jupyter_widgets %}

{% block extra_css %}
{% endblock extra_css %}

{% for css in resources.inlining.css -%}
  <style type="text/css">
    {{ css }}
  </style>
{% endfor %}

{% block notebook_css %}
{{ resources.include_css("static/index.css") }}
{% if resources.theme == 'dark' %}
    {{ resources.include_css("static/theme-dark.css") }}
{% else %}
    {{ resources.include_css("static/theme-light.css") }}
{% endif %}
<style type="text/css">
a.anchor-link {
   display: none;
}
.highlight  {
    margin: 0.4em;
}

/* Input area styling */
.jp-InputArea {
    overflow: hidden;
}

.jp-InputArea-editor {
    overflow: hidden;
}

@media print {
  body {
    margin: 0;
  }
}

body {
  margin: 0;
}

.jp-Notebook {
  padding: 0;
}

.jp-Cell {
  padding: 0;
}

.jp-Cell:not(.jp-mod-noOutputs) .jp-Cell-outputWrapper {
  margin: 0;
}

.jupyter-widgets {
  margin: 0 !important;
}





.v-container.background {
  height: auto !important;
  position: fixed;
  top: 0;
  bottom: 0;
  border: 0;
}

.vuetify-styles .v-application--wrap {
  flex-direction: row !important;
}

.v-container.work_area {
  height: auto !important;
  position: fixed;
  bottom: 0;
}

.v-navigation-drawer.side_nav {
  height: 100% !important;
}

.top_area .v-toolbar__content {
  height: 48px !important;
  padding: 0 !important;
}

.vuetify-styles .v-list-item--link:before {
    border-radius: inherit
}

.vuetify-styles .theme--light.v-list-item:hover:before {
    background-color: #ffffff !important;
    opacity: 0.08 !important;
}

.vuetify-styles .theme--light.v-list-item--active:before {
    background-color: #0f172a !important;
}

.vuetify-styles .theme--light.v-list-item--disabled:before {
    background-color: #ffffff !important;
    opacity: 0.08 !important;
}

.v-list-group__header__prepend-icon {
    margin-right: 6px !important;
    margin-top: 0 !important;
    margin-bottom: 0 !important;
    align-self: auto !important;
}

.v-list-group__header__prepend-icon .v-icon {
    color: #e2e2e2de !important;
}

.v-list-group__header__append-icon .v-icon.mdi-chevron-down {
    color: #e2e2e2de !important;
}

.vuetify-styles .col {
    margin: 0 !important;
}

.vuetify-styles .theme--light.v-btn-toggle:not(.v-btn-toggle--group) {
    background: none !important;
}

.vuetify-styles .work_area_tab_menu .v-btn:not(.v-btn--text):not(.v-btn--outlined).v-btn--active:before {
    opacity: 0;
}

/*------------------------------------------------------*/


</style>

{% endblock notebook_css %}

{%- block html_head_js_mathjax -%}
{{ mathjax(resources.mathjax_url) }}
{%- endblock html_head_js_mathjax -%}

{%- block html_head_css -%}
{%- endblock html_head_css -%}

{%- endblock html_head -%}
</head>
{%- endblock header -%}

{%- block body_header -%}
{% if resources.theme == 'dark' %}
<body class="jp-Notebook" data-jp-theme-light="false" data-jp-theme-name="JupyterLab Dark">
{% else %}
<body class="jp-Notebook" data-jp-theme-light="true" data-jp-theme-name="JupyterLab Light">
{% endif %}
{%- endblock body_header -%}

{% block body_footer %}
</body>
{% endblock body_footer %}

{% block footer %}
{% block footer_js %}
{% endblock footer_js %}
{{ super() }}
</html>
{% endblock footer %}
